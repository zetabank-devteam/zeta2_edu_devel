<?xml version="1.0" ?>
<robot name="zeta2" xmlns:xacro="http://ros.org/wiki/xacro">
  <xacro:include filename="$(find zeta2_description)/urdf/common_properties.xacro"/>


  <link name="base_footprint"/>
<!--main frame-->
  <joint name="base_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link" />
    <origin xyz="0 0 0.04" rpy="0 0 0"/>
  </joint>

  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://zeta2_description/meshes/zeta/zeta_frame.stl" /> -->
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0 " rpy="0 0 0"/>
      <geometry>
        <!-- <mesh filename="package://zeta2_description/meshes/zeta/zeta_frame.stl" /> -->
        <box size="${base_length} ${base_width} ${base_height}"/>
      </geometry>
    </collision>
  </link>

<!--wheel left-->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0 0.087 -0.015" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://zeta2_description/meshes/zeta/zeta_left_wheel.stl" />
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
    </collision>    
  </link>

<!--wheel right-->
  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0 -0.087 -0.015" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://zeta2_description/meshes/zeta/zeta_right_wheel.stl" />
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
      </geometry>
    </collision>   
  </link>

<!-- imu joint -->
  <joint name="imu_joint" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0.0 0.0 0.03" rpy="0 0 0"/>
  </joint>

  <link name="imu_link"/>


  <!-- camera joint -->
  <joint name="camera_joint" type="fixed">
    <origin xyz="0.14 0 0.033" rpy="0 0 0"/>
    <parent link="base_link"/>
    <child link="main_camera_optical"/>
  </joint>
  <link name="main_camera_optical"/>


<!--ldlidar-->
  <joint name="scan_joint" type="fixed">
    <parent link="base_link"/>
    <child link="base_scan"/>
    <origin xyz="0 0 0.08" rpy="0 0 0"/>
  </joint>
  <link name="base_scan">
    <visual>
      <origin xyz="-0.05 -0.03 -0.05" rpy="1.57 0 1.57"/>
      <geometry>
        <mesh filename="package://zeta2_description/meshes/zeta/ld06.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="pink"/>
    </visual>
  </link>

</robot>